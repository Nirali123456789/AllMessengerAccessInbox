        <item name="colorPrimaryVariant">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.AllMessengerAccessInbox" parent="Base.Theme.AllMessengerAccessInbox" />
    <style name="Theme.AllMessengerAccessInboxNight" parent="Base.Theme.AllMessengerAccessInbox" >
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>


</resources>